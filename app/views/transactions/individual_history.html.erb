<!-- Andre Haas, Tom Lai -->

<% provide(:title, 'Individual History with ' + @user.name) %>

<h1>Transaction history</h1>
<%= link_to "back", transactions_show_path, class: 'btn btn-default' %>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Time</th>
            <th>Payer</th>
            <th>Payee</th>
            <th>Name of item</th>
            <th>Amount</th>
            <th>is_payback</th>
        </tr>
    </thead>
    <tbody>
        <% @transactions.each do |t| %>
        <tr>
            <td><%= t.created_at %></td>
            <td><%= t.payer.name %></td>
            <td><%= t.payee.name %></td>
            <td><%= t.transaction_group.name %></td>
            <td><%= t.amount %> </td>
            <td><%= t.is_payback.to_s %></td>
        </tr>
        <% end %>
    </tbody>
</table>
