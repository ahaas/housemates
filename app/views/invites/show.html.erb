<html>
<body>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1> Invitations </h1>
    <%= form_tag invites_accept_path do %>
      <% @households.each do |household| %>
        <%= label_tag household.name %>
        <%= submit_tag "Accept invite", name: "household[#{household.id}]", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
<h1> -or- </h1>
  <div class = "household">
  <%= button_to "Create a Household", households_create_path, :class => "btn btn-primary", :method => :get %>
  </div>
</body>
</html>